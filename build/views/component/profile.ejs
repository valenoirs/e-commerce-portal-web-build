<% if (adminNotification.length > 0) { %>
<div
  class="toast-container position-fixed bottom-0 end-0 p-3"
  data-aos="fade-down"
  data-aos-duration="750"
>
  <div
    class="toast fade show"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <div class="toast-header">
      <!-- <img src="..." class="rounded me-2" alt="..." /> -->
      <strong class="me-auto text-success">Notifikasi</strong>
      <small>Just now.</small>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
    <div class="toast-body"><%= adminNotification %></div>
  </div>
</div>
<% } %>

<div class="row justify-content-center">
  <div class="col-10 p-5 text-secondary">
    <h6 class="text-success">
      <i class="bi bi-patch-check-fill"></i> Terverifikasi
    </h6>
    <h1 class="text-dark mb-3"><%= admin.name %></h1>
    <h6 class="mb-3">
      <i class="bi bi-geo-alt-fill"></i> <%= admin.address %>
    </h6>
    <h6 class="mb-3">
      <span class="text-warning"><i class="bi bi-star-fill"></i></span>
      <%= admin.rating %>
    </h6>
    <p><%= admin.description %></p>
    <h5>
      <% if (locals.admin.isOpen) { %>

      <span class="text-success"
        ><i class="bi bi-door-open-fill"></i> Buka</span
      >
      <% } else {%>
      <span class="text-danger"
        ><i class="bi bi-door-closed-fill"></i> Tutup</span
      >
      <%}%>
    </h5>
  </div>
</div>
